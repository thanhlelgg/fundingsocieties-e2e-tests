<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
    ​
    <Properties>
        <Property name="LOG_LOC">logs</Property>
        <Property name="MAX">5</Property>
        <Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
        </Property>
    </Properties>
    ​
    <Appenders>
        <RollingFile name="FILE" fileName="${LOG_LOC}/main.log"
                     filePattern="${LOG_LOC}/main.%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            ​
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            ​
            <DefaultRolloverStrategy max="${MAX}"/>
        </RollingFile>
        ​
        <Console name="STDOUT" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>
    ​
    <Loggers>
        <Logger name="com.fundingsocieties" level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
    </Loggers>
    ​
</Configuration>